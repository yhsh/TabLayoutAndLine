<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/rb_money_seven_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_monetary_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="7日"
                android:textColor="@drawable/shape_monetary_type_text_color_bg"/>

        <RadioButton
                android:id="@+id/rb_money_one_mouth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_monetary_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="一个月"
                android:textColor="@drawable/shape_monetary_type_text_color_bg"/>

        <RadioButton
                android:id="@+id/rb_money_two_mouth"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_monetary_type_bg"
                android:button="@null"
                android:gravity="center"
                android:text="两个月"
                android:textColor="@drawable/shape_monetary_type_text_color_bg"/>
    </RadioGroup>

    <kotlin.yhsh.cn.tablayoutandline.MyLineChartView
            android:id="@+id/mlv_financing_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>